<?xml version='1.0' ?>

<t:chloe xmlns:t="http://factorcode.org/chloe/1.0">

	<t:title>Recent Tutorials</t:title>

    <table id="tutorials-list">
      <tr id="top-row">
        <td>Subject</td>
        <td>Tutor</td>
        <td>Time</td>
        <td>Location</td>
        <td>Cost</td>
      </tr>
	<t:bind-each t:name="tutorials">
      <tr>
        <td>
          <t:label t:name="subject" />
        </td>
        <td>
          <t:a t:href="$tutorials/by" t:rest="tutor">
            <t:label t:name="tutor" />
          </t:a>
        </td>
        <td>
          <t:label t:name="time" />
        </td>
        <td>
          <t:label t:name="location" />
        </td>
        <td>
          <t:label t:name="cost" />
        </td>
      </tr>
	</t:bind-each>
    </table>

</t:chloe>
