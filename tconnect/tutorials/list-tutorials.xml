<?xml version='1.0' ?>

<t:chloe xmlns:t="http://factorcode.org/chloe/1.0">

	<t:title>Recent Tutorials</t:title>

	<t:bind-each t:name="tutorials">

		<h2 class="tutorials-title">
			<t:a t:href="$tutorial/post" t:rest="id">
				<t:label t:name="title" />
			</t:a>
		</h2>
        

        <div class="posting-footer">
			Taught by
			<t:a t:href="$tutorials/by" t:rest="author">
              <t:label t:name="author" />
			</t:a>
			on
			<t:label t:name="date" />
		</div>

	</t:bind-each>

</t:chloe>
